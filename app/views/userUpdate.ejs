<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>FullStack</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>
<style>
    .card-title {
        padding: 2%;
        color: white;
        background-color: #26a69a;
        text-align: center;
        font-size: large;
    }

    select {
        display: block !important;
    }

    button {
        color: #fff;
        background-color: #26a69a;
        text-align: center;
        font-size: medium;
        padding: 8px;
        letter-spacing: .5px;
        border: none;
        border: none;
        border-radius: 2px;
        display: inline-block;
        height: 36px;
        line-height: 36px;
        padding: 0 16px;
        text-transform: uppercase;
        vertical-align: middle;
        -webkit-tap-highlight-color: transparent;
    }
  
    [type="checkbox"]:not(:checked), [type="radio"]:not(:checked){
        opacity: 1!important;
    }
    [type="checkbox"], [type="radio"]{
        opacity: 1!important;
    }
    input[type=checkbox], input[type=radio]{
        margin: 1px 40px 0px -20px!important;
    }
</style>

<body>
    <div class="main-wrapper">
        <div class="row">
            <div class="container">
                <div class="col-md-12 stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">Add User</h6>
                            <br>
                            <% if (typeof error !== 'undefined' && error.length > 0) { %>
                                <div class="container">
                                    <div class="alert alert-warning" style="text-align: center;"> <%= error %> &nbsp; &nbsp; &nbsp;<a href="/userList" style="color:#8a6d3b;">&#10006;</a></div>
                                </div>
                        <% } %>
                            <div class="container">
                                <form class="cmxform" id="signupForm" method="post" action="/update" enctype="multipart/form-data">
                                    <input type="hidden" value="<%= values._id %>" name="_id">
                                    <div class="row">
                                        <div class="col-sm-6 col-lg-6 col-md-6">
                                            <div class="form-group">
                                                <label for="name">Username</label>
                                                <input id="name" class="form-control" name="username" type="text"
                                                 placeholder="Enter Username"  value="<%= values.username %>" >
                                                 
                                                <% if (typeof error1 !== 'undefined' && error1.length > 0) { %>
                                                    <div style="color: red;"> <%= error1 %></div>
                                            <% } %>
                                         </div>
                                        </div>
                                        <div class="col-sm-6 col-lg-6 col-md-6">
                                            <div class="form-group">
                                                <label for="email">Email</label>
                                                <input id="email" class="form-control" name="email" type="email" placeholder="Enter Email" value="<%= values.email %>" >
                                                <% if (typeof error2 !== 'undefined' && error2.length > 0) { %>
                                                    <div style="color: red;"> <%= error2 %></div>
                                            <% } %>
                                        </div>
                                        </div>
                                       
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6 col-lg-6 col-md-6">
                                            <div class="form-group">
                                                <label for="mobile_number">Phone Number</label>
                                                <input id="number" class="form-control" name="phone" type="number"
                                                    placeholder="Enter Phone Number" value="<%= values.phone %>" >
                                                    <% if (typeof error3 !== 'undefined' && error3.length > 0) { %>
                                                        <div style="color: red;"> <%= error3 %></div>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-lg-6 col-md-6">
                                            <div class="form-group">
                                                <label for="exampleFormControlSelect1">Gender</label><br/>
                                                <div class="radio">
                                                    <label><input type="radio" name="gender" value="male" <%= values.gender ? 'checked' : '' %> >Male</label>
                                                  </div>
                                                  <div class="radio">
                                                    <label><input type="radio" name="gender" value="female" <%= values.gender ? 'checked' : '' %> >Female</label>
                                                  </div>
                                                  <% if (typeof error4 !== 'undefined' && error4.length > 0) { %>
                                                    <div style="color: red;"> <%= error4 %></div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label for="address">Address</label>
                                                <textarea class="form-control" id="exampleFormControlTextarea1" name="address" rows="3"><%= values.address %></textarea>
                                          
                                                <% if (typeof error5 !== 'undefined' && error5.length > 0) { %>
                                                    <div style="color: red;"> <%= error5 %></div>
                                            <% } %>  </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                      
                                        <div class="col-sm-6 col-lg-6 col-md-6">
                                            <div class="form-group">
                                                <label for="exampleFormControlSelect1" style="margin-bottom: 8%">Select Country</label>
                                                <select class="form-control" id="exampleFormControlSelect1"  name="country">
                                                    <%
                                                        var options = ["India", "Europe", "USA", "UK", "Canada" ];
                                                        for ( var i = 0; i < options.length; i++ )
                                                        {
                                                            var isSelected = ( values.country == options[i] ) ? "selected" : "";
                                                        %>  
                                                            <option value="<%=options[i]%>" <%=isSelected %>>
                                                                <%= options[i] %>
                                                            </option>
                                                        <%
                                                        }
                                                        %>
                                                   
                                                </select>
                                                <% if (typeof error6 !== 'undefined' && error6.length > 0) { %>
                                                    <div style="color: red;"> <%= error6 %></div>
                                            <% } %>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label for="pincode">Pincode</label>
                                                <input type="text" class="form-control" id="pincode" name="pincode"  placeholder="Enter Pincode" value="<%= values.pincode %>">
                                                <% if (typeof error7 !== 'undefined' && error7.length > 0) { %>
                                                    <div style="color: red;"> <%= error7 %></div>
                                            <% } %>
                                          </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6 col-lg-6 col-md-6">
                                            <div class="form-group">
                                                <label for="pincode">Hobbies</label>

                                                <div class="checkbox">
                                                    <label><input type="checkbox" name="hobbies" value="reading" <%= values.hobbies=="reading" ? 'checked' : '' %>>Reading</label>
                                                  </div>
                                                  <div class="checkbox">
                                                    <label><input type="checkbox"  name="hobbies" value="playing" <%= values.hobbies=="playing" ? 'checked' : '' %>>Playing</label>
                                                  </div>
                                                  <div class="checkbox">
                                                    <label><input type="checkbox"  name="hobbies" value="drawing" <%= values.hobbies=="drawing" ? 'checked' : '' %>>Drawing</label>
                                                  </div>
                                                  <% if (typeof error8 !== 'undefined' && error8.length > 0) { %>
                                                    <div style="color: red;"> <%= error8 %></div>
                                            <% } %>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="image" class="col-md-6 control-label">Upload Image</label>
                                            <br>
                                            <div class="col-sm-12">
                                                <input class="form-control" style="height: 70px;
                                                padding: 20px;" type="file" name="image"  value="<%= values.image %>">
                                           
                                           
                                                <% if (typeof error9 !== 'undefined' && error9.length > 0) { %>
                                                    <div style="color: red;"> <%= error9 %></div>
                                            <% } %> </div>
                                        </div> 
                                        </div>

                                            
                                             
                                              
                                            
                                    </div>
                                    <div ><a href="/userList" class="forget">Back</a></div> 

                                    <input class="btn btn-primary" style="margin: 0% 0% 2% 40%;" type="submit"
                                    value="Submit">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>


</body>

</html>