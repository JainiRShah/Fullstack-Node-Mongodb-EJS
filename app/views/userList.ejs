<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>FullStack</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>
<style>
    .card{
        margin: 40px;
        padding: 3% 5%;
    }
    .card-title{
        text-align: center;
    }
  .table-responsive{
      margin: 2% 0%;
  }
</style>
<body>
    <div class="main-wrapper">


        <div class="page-wrapper">


            <div class="page-content">

                <div class="row">
                    <div class="col-md-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h6 class="card-title mb-0">User List</h6>
                                    <a href="userAdd"> <button class="btn btn-primary btn-icon-text mb-2 mb-md-0" >Add User</button></a>

                                    <a href="logout"  
                                    onclick="return confirm('Are you sure you want to logout ?')" > <button style="float: right;" class="btn btn-primary btn-icon-text mb-2 mb-md-0" >Logout</button></a>
                                    <a href="resetPassword"> <button style="float: right; margin:0px 10px;" class="btn btn-primary btn-icon-text mb-2 mb-md-0" >Change Password</button></a>

                                </div>
                                <div class="table-responsive">
                                    <table id="dataTableExample" class="table table-striped" style="font-size: 16px;">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Number</th>
                                                <th>Gender</th>
                                                <th>Hobbies</th>
                                                <th>Country</th>
                                                <th>Address</th>
                                                <th>Pincode</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <% i=1 %>
                                        <% users.forEach(function(user){ %>
                                        <tr>                                   
                                            <td><%= user.username %></td>
                                            <td><%= user.email %></td>
                                            <td><%= user.phone %></td>
                                            <td><%= user.gender %></td>
                                            <td><%= user.hobbies %></td>
                                            <td><%= user.country %></td>
                                            <td><%= user.address %></td>
                                            <td><%= user.pincode %></td>
                                            <td>
                                                <a href="userUpdate?_id=<%= user._id %>" style ="height: 30px;
                                                    width: 60px;
                                                    line-height: 30px;
                                                    margin:5px;"
                                                    class="btn btn-sm btn-primary">Edit</a>
                                                <a href="userDelete?_id=<%= user._id %>" style ="height: 30px;
                                                    width: 90px;
                                                    line-height: 30px;
                                                    margin:5px;"
                                                    
                                                    onclick="return confirm('Are you sure you want to delete the record ?')"  class="btn btn-sm btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                        <% i=i+1 %>
                                        <% }); %> 
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>

    </div>
   
</body>
</html>